  </servlet>
  <servlet-mapping>
    <servlet-name>ListAdminServlet</servlet-name>
    <url-pattern>/listadmin</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AdminFilter</filter-name>
    <filter-class>main.controllers.filters.AdminFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <!--<servlet-name>ListAdminServlet</servlet-name>-->
    <url-pattern>/listadmin</url-pattern>
  </filter-mapping>


  <resource-ref>
