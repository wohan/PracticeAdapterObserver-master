  <servlet-mapping>
    <servlet-name>PassNotTrueServlet</servlet-name>
    <url-pattern>/passnottrue</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BuyerExistServlet</servlet-name>
